{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2021",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "composite": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [
      "vite/client",
      "jest",
      "node"
    ],
    "baseUrl": "./",
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "vueCompilerOptions": {
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
